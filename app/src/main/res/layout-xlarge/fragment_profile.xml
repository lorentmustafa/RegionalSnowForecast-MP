<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilefragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/myprofilepicture"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="164dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/myName"
        android:layout_width="500dp"
        android:layout_height="80sp"
        android:layout_marginTop="92dp"
        android:alpha="0.5"
        android:background="@drawable/input_field"
        android:ems="10"
        android:padding="15dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textColorHint="@color/purple"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myprofilepicture" />

    <TextView
        android:id="@+id/myEmail"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:alpha="0.5"
        android:background="@drawable/input_field"
        android:ems="10"
        android:padding="15dp"
        android:text="@string/email"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textColorHint="@color/purple"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myName" />

    <TextView
        android:id="@+id/myRegion"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:alpha="0.5"
        android:background="@drawable/input_field"
        android:ems="10"
        android:padding="15dp"
        android:text="@string/region"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textColorHint="@color/purple"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myEmail" />

    <EditText
        android:id="@+id/myActivity"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginTop="44dp"
        android:alpha="0.5"
        android:background="@drawable/input_field"
        android:ems="10"
        android:padding="15dp"
        android:text="@string/ski_snowboard"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textColorHint="@color/purple"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myRegion" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:max="100"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.71" />

    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myActivity"
        app:layout_constraintVertical_bias="0.289" />


</androidx.constraintlayout.widget.ConstraintLayout>